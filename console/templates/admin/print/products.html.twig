<div class="row align-items-center" style="width: 350px">
    {% for campaign in entity.instance.campaigns %}
        <div class="col-md-4 my-2 text-center">
            <div style="width: 50px; height: 50px; display: flex; justify-content: center; align-items: center; margin: 0 auto 10px auto;">
                <img src="{{ cdn_image_url(campaign.preview, 'print/no-imge.png') }}"
                     style="max-width: 100%; max-height: 100%; border: 1px solid #e5e5e5;" />
            </div>

            <div style="font-size: 10px; line-height: 1.1rem;">
                {{ ('products.'~campaign.product)|trans({}, 'global') }}<br />
                {{ campaign.quantity|format_number }}
            </div>

            <div style="font-size: 10px; line-height: 1.1rem;">
                {{ campaign.uuid|u.truncate(8) }}
            </div>

            <div style="font-size: 10px; line-height: 1.1rem;">
                {% if campaign.source %}
                    <a href="{{ cdn_url(campaign.source) }}" target="_blank">
                        Source
                    </a>
                {% endif %}

                {% if campaign.bat %}
                    <br />
                    <a href="{{ cdn_url(campaign.bat) }}" target="_blank">
                        BAT
                    </a>
                {% endif %}
            </div>
        </div>
    {% endfor %}
</div>
