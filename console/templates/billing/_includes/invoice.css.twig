/*
 * Base CSS
 */

@page {
    size: A4;
    margin: 0;
}

* {
    -webkit-print-color-adjust: exact;
}

html, body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', 'Ubuntu', sans-serif;
}

.sheet {
    width: 210mm;
    height: 296mm;
    margin: 0;
    padding: 10mm;
    overflow: hidden;
    position: relative;
    box-sizing: border-box;
    page-break-after: always;
}

/** For screen preview **/
@media screen {
    html, body {
        background: #e0e0e0;
    }

    .sheet {
        background: white;
        box-shadow: 0 .5mm 2mm rgba(0,0,0,.3);
        margin: 7mm auto;
    }
}

/** Fix for Chrome issue #273306 **/
@media print {
    html, body {
        width: 210mm !important;
        min-width: 210mm !important;
        max-width: 210mm !important;
    }
}

/*
 * Custom CSS
 */
.invoice-head {
    display: flex;
    align-items: center;
    margin-bottom: 10mm;
}

.invoice-head-logo {
    flex-basis: 0;
    width: 50mm;
    min-width: 50mm;
    margin-right: 25mm;
}

.invoice-head-logo svg, .invoice-head-logo img {
    max-width: 100%;
}

.invoice-head-address {
    flex-basis: 0;
    width: 45mm;
    min-width: 45mm;
}

.invoice-head-address, .invoice-head-details {
    font-size: 12px;
}
.invoice-head-details-label {
    display: inline-block;
    width: 23mm;
    padding-right: 2mm;
    text-align: right;
    color: #777;
    font-style: italic;
}

.invoice-intro {
    display: flex;
    align-items: flex-start;
    margin-bottom: 10mm;
}

.invoice-number {
    font-weight: 700;
    margin: 0 0 3mm 0;
}

.invoice-details {
    flex-basis: 0;
    width: 90mm;
    min-width: 90mm;
}
.invoice-details-label {
    display: inline-block;
    width: 15mm;
    color: #777;
}

.invoice-recipient {
    border: 1px solid #777;
    flex-grow: 1;
    padding: 3mm;
}

.invoice-lines-head, .invoice-lines-line {
    display: flex;
    align-items: center;
}
.invoice-lines-head {
    font-weight: bold;
    background: #0077CC;
    color: #fff;
}
.invoice-lines-line {
    border-bottom: 1px solid #0077CC;
}
.invoice-lines-product {
    flex-basis: 0;
    width: 80mm;
    min-width: 80mm;
    padding: 2mm;
}
.invoice-lines-product-description {
    color: #777;
    font-size: 12px;
}
.invoice-lines-quantity, .invoice-lines-price {
    flex-basis: 0;
    flex-grow: 1;
    padding: 2mm;
    text-align: center;
}

.invoice-total {
    margin-top: 8mm;
    font-size: 14px;
}
.invoice-total-label {
    display: inline-block;
    width: 32mm;
    padding-right: 4mm;
    color: #777;
}
.invoice-total-after-tax {
    font-size: 24px;
    margin: 3mm 0;
}

.invoice-footer {
    position: absolute;
    bottom: 10mm;
}
.invoice-footer-bank-title {
    font-weight: 700;
    margin: 0 0 3mm 0;
}
.invoice-footer-bank-label {
    display: inline-block;
    width: 20mm;
    color: #777;
}

.invoice-footer-legalities {
    margin-top: 5mm;
    font-size: 12px;
    color: #555;
}
