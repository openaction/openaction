{% extends 'console/organization/community/base.html.twig' %}

{% block page_title 'configure.main_tags.title'|trans({}, 'organization_community') %}

{% block sidebar_main_tags 'current' %}

{% block content %}
    <div class="world-box">
        <div class="world-box-title">
            <h3>
                {{ 'configure.main_tags.title'|trans({}, 'organization_community') }}
            </h3>

            <div class="text-muted">
                {{ 'configure.main_tags.help'|trans({}, 'organization_community') }}
            </div>
        </div>

        <div class="bg-light p-3 p-lg-4">
            <div class="row justify-content-center mt-4 mb-4">
                <div class="col-12 col-md-9 col-lg-6">
                    {{ form_start(form) }}

                    <strong>
                        {{ 'configure.main_tags.tags.label'|trans({}, 'organization_community') }}
                    </strong>

                    <div class="text-muted mb-3">
                        {{ 'configure.main_tags.tags.help'|trans({}, 'organization_community') }}
                    </div>

                    {% for key, field in form.tags %}
                        <div class="d-flex align-items-center mb-2">
                            <div class="mr-2">
                                {{ key + 1 }}
                            </div>
                            <div>
                                {{ form_widget(field) }}
                                {{ form_errors(field) }}
                            </div>
                        </div>
                    {% endfor %}

                    <div class="mt-3">
                        {{ form_row(form.isProgress, {
                            'label_attr': {'class': 'checkbox-custom'},
                            'label': 'configure.main_tags.is_progress.label'|trans({}, 'organization_community'),
                            'help': 'configure.main_tags.is_progress.help'|trans({}, 'organization_community')
                        }) }}
                    </div>

                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-primary btn-lg">
                            {{ 'configure.main_tags.save'|trans({}, 'organization_community') }}
                        </button>
                    </div>

                    {{ form_rest(form) }}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
