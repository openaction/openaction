{% extends 'console/organization/community/base.html.twig' %}

{% block page_title 'contacts.import.page_title'|trans({}, 'organization_community') %}

{% block sidebar_import 'current' %}

{% block content %}
    <div class="world-box">
        <div class="world-box-title">
            <h3 class="mb-0">
                {{ 'contacts.import.upload.title'|trans({}, 'organization_community') }}
            </h3>
        </div>

        <div class="bg-light px-3 py-5">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8 col-xl-6">

                    <div class="alert alert-info">
                        {{ 'contacts.import.upload.note'|trans({}, 'organization_community')|raw }}
                    </div>

                    <div>
                        <label for="uploadcare">
                            {{ 'contacts.import.upload.file.label'|trans({}, 'organization_community') }}
                        </label>
                    </div>

                    <div class="print-uploader" style="height: 40px">
                        <div {{ react_component('Organization/Community/ImportUploader', {
                            uploadKey: uploadKey.toArray,
                            prepareUrl: csrf_path('console_organization_community_contacts_import_prepare', {'organizationUuid': current_organization.uuid}),
                            errorLabel: 'contacts.import.upload.file.error'|trans({}, 'organization_community'),
                        }) }}></div>
                    </div>

                    <small class="text-muted mt-1">
                        {{ 'contacts.import.upload.file.help'|trans({}, 'organization_community') }}
                    </small>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
