{% extends 'console/organization/base.html.twig' %}

{% block page_title 'telegram.register.page_title'|trans({}, 'organization_integrations') %}

{% block content %}
    <div class="world-box">
        <div class="world-box-title bg-white">
            <a href="{{ path('console_organization_integrations_telegram', {'organizationUuid': current_organization.uuid}) }}"
               class="btn btn-outline-primary btn-sm border-0">
                <i class="fal fa-angle-left"></i>
                <span>{{ 'telegram.register.back'|trans({}, 'organization_integrations') }}</span>
            </a>

            <h3 class="mt-2 mb-0">
                {{ 'telegram.register.page_title'|trans({}, 'organization_integrations') }}
            </h3>

            <div class="text-muted">
                {{ 'telegram.register.help'|trans({}, 'organization_integrations') }}
            </div>
        </div>

        <div class="bg-light p-3 p-lg-4">
            <div class="row justify-content-center my-4">
                <div class="col-12 col-lg-10 col-xl-8">
                    {{ form_start(form) }}

                    {{ form_row(form.botUsername, {'label': 'telegram.register.username'|trans({}, 'organization_integrations')}) }}

                    <button type="submit" class="btn btn-primary">
                        {{ 'telegram.register.submit'|trans({}, 'organization_integrations') }}
                    </button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
