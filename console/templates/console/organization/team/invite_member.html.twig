{% extends 'console/organization/base.html.twig' %}

{% block page_title 'invite_member.page_title'|trans({}, 'organization_team') %}

{% block content %}
    {{ form_start(form) }}

    <div class="world-box">
        <div class="world-box-title bg-white sticky-top">
            <div class="row align-items-center">
                <div class="col-12 col-lg-8">
                    <a href="{{ path('console_organization_team', {'organizationUuid': current_organization.uuid}) }}"
                       class="btn btn-outline-primary btn-sm border-0">
                        <i class="fal fa-angle-left"></i>
                        <span>{{ 'invite_member.back'|trans({}, 'organization_team') }}</span>
                    </a>

                    <h3 class="mt-2 mb-0">
                        {{ 'invite_member.title'|trans({}, 'organization_team') }}
                    </h3>
                </div>
                <div class="col-12 col-lg-4 text-lg-right">
                    <button type="submit" class="btn btn-primary">
                        {{ 'invite_member.button'|trans({}, 'organization_team') }}
                    </button>
                </div>
            </div>
        </div>

        <div class="bg-light p-3 p-lg-4">
            {{ form_errors(form) }}

            <div class="row">
                <div class="col-12 col-md-10 col-lg-8">
                    {{ form_row(form.email, {
                        'label': 'invite_member.email'|trans({}, 'organization_team'),
                        'attr': {'class': 'form-control-lg'},
                    }) }}

                    {{ form_row(form.locale, {
                        'label': 'invite_member.locale'|trans({}, 'organization_team'),
                    }) }}
                </div>
            </div>

            {{ include('console/organization/team/_permissions_form.html.twig') }}

            <div class="mt-5 text-center">
                <button type="submit" class="btn btn-lg btn-primary">
                    {{ 'invite_member.button'|trans({}, 'organization_team') }}
                </button>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
