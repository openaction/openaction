{% extends 'console/partner/base.html.twig' %}

{% block page_title 'menu.title'|trans({}, 'partner') %}

{% block sidebar_menu 'current' %}

{% block content %}
    <div class="world-box mb-3">
        <div class="world-box-title bg-white">
            <h3>
                {{ 'menu.title'|trans({}, 'partner') }}
            </h3>

            <div class="text-muted">
                {{ 'menu.help'|trans({}, 'partner') }}
            </div>
        </div>

        <div class="bg-light p-3 p-lg-4">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            {% for i in [1, 2] %}
                <div class="row">
                    <div class="col-lg-4 col-xl-3">
                        {{ form_row(form['label'~i], {'label': 'menu.form.label'|trans({}, 'partner')}) }}
                    </div>
                    <div class="col-lg-8 col-xl-5">
                        {{ form_row(form['url'~i], {'label': 'menu.form.url'|trans({}, 'partner')}) }}
                    </div>
                </div>
            {% endfor %}

            <button type="submit" class="btn btn-primary">
                {{ 'menu.form.save'|trans({}, 'partner') }}
            </button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
