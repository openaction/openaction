{% extends 'console/partner/base.html.twig' %}

{% block page_title 'theme.linking.title'|trans({}, 'partner') %}

{% block sidebar_themes 'current' %}

{% block metas %}
    <meta http-equiv="refresh" content="3;url={{ path('console_partner_themes_link', {'installation_id': installationId, 'apply': '1'}) }}" />
{% endblock %}

{% block content %}
    <div class="world-box">
        <div class="world-box-title">
            <h3 class="mb-0">
                {{ 'theme.linking.title'|trans({}, 'partner') }}
            </h3>
        </div>

        <div class="bg-light text-center px-4 py-5">
            <h4>
                {{ 'theme.linking.desc'|trans({}, 'partner') }}
            </h4>

            <div class="my-4 h3">
                <i class="fal fa-spin fa-circle-notch"></i>
            </div>
        </div>
    </div>
{% endblock %}
