{% extends 'console/project/base.html.twig' %}

{% block page_title 'access.title'|trans({}, 'project_configuration') %}

{% block sidebar_access 'current' %}

{% block content %}
    <div class="world-box mb-3">
        <div class="world-box-title">
            <h3>
                {{ 'access.title'|trans({}, 'project_configuration') }}
            </h3>

            <div class="text-muted">
                {{ 'access.help'|trans({}, 'project_configuration') }}
            </div>
        </div>

        <div class="bg-light p-4 p-lg-5">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-10 col-xl-8">
                    {{ form_start(form) }}

                    {{ form_row(form.websiteAccessUser, {
                        'label': 'access.form.user'|trans({}, 'project_configuration'),
                    }) }}

                    {{ form_row(form.websiteAccessPass, {
                        'label': 'access.form.pass'|trans({}, 'project_configuration'),
                    }) }}

                    <div class="mb-5">
                        <small class="form-text text-muted">
                            {{ 'access.form.help'|trans({}, 'project_configuration') }}
                        </small>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">
                            {{ 'save'|trans({}, 'project_configuration') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
