{% extends 'console/project/base.html.twig' %}

{% block page_title 'homepage.events.title'|trans({}, 'project_appearance') %}

{% block sidebar_appearance 'current' %}

{% block content %}
    <div class="world-box mb-3">
        <div class="world-box-title">
            <a href="{{ path('console_configuration_appearance_website_homepage', {'projectUuid': current_project.uuid}) }}"
               class="btn btn-outline-primary btn-sm border-0 mb-2">
                <i class="fal fa-angle-left"></i>
                <span>{{ 'back_homepage'|trans({}, 'project_appearance') }}</span>
            </a>

            <h3>
                {{ 'homepage.events.title'|trans({}, 'project_appearance') }}
            </h3>

            <div class="text-muted">
                {{ 'homepage.events.help'|trans({}, 'project_appearance') }}
            </div>
        </div>

        <div class="bg-light p-4 p-lg-5">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-9 col-xl-6">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_row(form.category, {
                            'label': 'homepage.events.form.category.label'|trans({}, 'project_appearance'),
                            'help': 'homepage.events.form.category.help'|trans({}, 'project_appearance'),
                        }) }}
                    </div>

                    <div class="mb-5">
                        {{ form_row(form.label, {
                            'label': 'homepage.posts.form.label.label'|trans({}, 'project_appearance'),
                            'help': 'homepage.posts.form.label.help'|trans({}, 'project_appearance'),
                        }) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">
                            {{ 'save'|trans({}, 'project_appearance') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
