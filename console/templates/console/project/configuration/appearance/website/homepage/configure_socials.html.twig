{% extends 'console/project/base.html.twig' %}

{% block page_title 'homepage.socials.title'|trans({}, 'project_appearance') %}

{% block sidebar_appearance 'current' %}

{% block content %}
    <div class="world-box mb-3">
        <div class="world-box-title">
            <a href="{{ path('console_configuration_appearance_website_homepage', {'projectUuid': current_project.uuid}) }}"
               class="btn btn-outline-primary btn-sm border-0 mb-2">
                <i class="fal fa-angle-left"></i>
                <span>{{ 'back_homepage'|trans({}, 'project_appearance') }}</span>
            </a>

            <h3>
                {{ 'homepage.socials.title'|trans({}, 'project_appearance') }}
            </h3>

            <div class="text-muted">
                {{ 'homepage.socials.help'|trans({}, 'project_appearance') }}
            </div>
        </div>

        <div class="bg-light p-4 p-lg-5">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-10 col-xl-8">
                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-1 mt-auto mb-3">
                            <i class="fab fa-facebook fa-2x fa-fw"></i>
                        </div>
                        <div class="col-11">
                            {{ form_row(form.facebook, {
                                'label': 'homepage.socials.form.facebook'|trans({}, 'project_appearance'),
                            }) }}
                        </div>

                        <div class="col-1 mt-auto mb-3">
                            <i class="fab fa-twitter fa-2x fa-fw"></i>
                        </div>
                        <div class="col-11">
                            {{ form_row(form.twitter, {
                                'label': 'homepage.socials.form.twitter'|trans({}, 'project_appearance'),
                            }) }}
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">
                            {{ 'save'|trans({}, 'project_appearance') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
