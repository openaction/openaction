{% extends 'console/project/base.html.twig' %}

{% block page_title 'modules.title'|trans({}, 'project_settings') %}

{% block sidebar_settings 'current' %}

{% block content %}
    <div class="world-box mb-3">
        <div class="world-box-title">
            <a href="{{ path('console_configuration_settings', {'projectUuid': current_project.uuid}) }}"
               class="btn btn-outline-primary btn-sm border-0 mb-2">
                <i class="fal fa-angle-left"></i>
                <span>{{ 'back'|trans({}, 'project_settings') }}</span>
            </a>

            <h3 class="mb-0">
                {{ 'modules.title'|trans({}, 'project_settings') }}
            </h3>
        </div>

        <div class="bg-light p-4 px-md-5">
            {{ form_start(form) }}

                {{ form_errors(form) }}

                <div class="mb-3">
                    {{ form_errors(form.modules) }}
                    {{ form_errors(form.tools) }}
                </div>

                <div data-controller="project--update-modules"
                     class="organization-manage-project-details mb-5">
                    <div class="d-none">
                        {{ form_widget(form.modules, {'attr': {'data-project--update-modules-target': 'modules'}}) }}
                        {{ form_widget(form.tools, {'attr': {'data-project--update-modules-target': 'tools'}}) }}
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">
                        {{ 'modules.submit'|trans({}, 'project_settings') }}
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
