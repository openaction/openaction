{% extends 'console/project/base.html.twig' %}

{% block page_title 'metas.title'|trans({}, 'project_socials') %}

{% block sidebar_socials_metas 'current' %}

{% block content %}
    <div class="world-box mb-3">
        <div class="world-box-title">
            <h3>
                {{ 'metas.title'|trans({}, 'project_socials') }}
            </h3>

            <div class="text-muted">
                {{ 'metas.help'|trans({}, 'project_socials') }}
            </div>
        </div>

        <div class="bg-light p-4 p-lg-5">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-10 col-xl-7">
                    {{ form_start(form) }}

                    <div class="mb-4">
                        {{ form_row(form.websiteMetaTitle, {
                            'label': 'metas.metaTitle.label'|trans({}, 'project_socials'),
                            'help': 'metas.metaTitle.help'|trans({}, 'project_socials'),
                        }) }}
                    </div>

                    <div class="mb-4">
                        {{ form_row(form.websiteMetaDescription, {
                            'label': 'metas.metaDescription.label'|trans({}, 'project_socials'),
                            'help': 'metas.metaDescription.help'|trans({}, 'project_socials'),
                        }) }}
                    </div>

                    <div class="mb-5">
                        {{ form_label(form.websiteSharer, 'metas.sharer.label'|trans({}, 'project_socials')) }}
                        {{ form_errors(form.websiteSharer) }}

                        {% if current_project.websiteSharer %}
                            <div class="border bg-white mb-3">
                                <img src="{{ cdn_image_url(current_project.websiteSharer) }}" class="img-fluid" />
                            </div>
                        {% endif %}

                        {{ form_widget(form.websiteSharer) }}

                        <small class="form-text text-muted">
                            {{ 'metas.sharer.help'|trans({}, 'project_socials') }}
                        </small>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">
                            {{ 'metas.submit'|trans({}, 'project_socials') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
