{% extends 'console/project/base.html.twig' %}

{% block page_title 'results.title'|trans({'%title%': answer.form.title}, 'project_forms') %}

{% block sidebar_forms 'current' %}

{% block content %}
    <div class="world-box mb-3">
        <div class="world-box-status">
            <a href="{{ path('console_website_forms_results', {'projectUuid': current_project.uuid, 'uuid': answer.form.uuid}) }}"
               class="btn btn-outline-primary btn-sm border-0">
                <i class="fal fa-angle-left"></i>
                <span>{{ 'results_view.back'|trans({}, 'project_forms') }}</span>
            </a>
        </div>

        <div class="p-3 p-lg-4">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8 pt-4">

                    {% if answer.contact %}
                        <div class="font-weight-bold mb-1">
                            {{ 'results_view.by'|trans({}, 'project_forms') }}
                        </div>

                        <div class="mb-4">
                            <a href="{{ path('console_community_contacts_view', {'projectUuid': current_project.uuid, 'uuid': answer.contact.uuid}) }}">
                                {{ answer.contact.email }}
                            </a>
                        </div>
                    {% endif %}

                    {% for field, value in answer.answers %}
                        <div class="font-weight-bold mb-1">
                            {{ field }}
                        </div>

                        <div class="text-muted mb-4">
                            {% if value starts with 'https://ucarecdn.com' %}
                                <a href="{{ value }}" target="_blank" rel="noopener noreferrer">
                                    {{ 'results_view.download'|trans({}, 'project_forms') }}
                                </a>
                            {% else %}
                                {{ value }}
                            {% endif %}
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
