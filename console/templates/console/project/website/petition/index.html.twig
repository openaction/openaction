{% extends 'console/project/base.html.twig' %}

{% block page_title 'Petitions' %}

{% block sidebar_posts '' %}

{% from 'console/_macros/pagination.html.twig' import pagination %}

{% block content %}
    <div class="world-box mb-3">
        <div class="world-box-title">
            <div class="row align-items-center">
                <div class="col-lg mb-3 mb-lg-0">
                    <h3>
                        Petitions
                    </h3>

                    <div class="text-muted">
                        Manage petitions for this project.
                    </div>
                </div>
                <div class="col-lg-2 text-lg-right">
                    <form method="get">
                        <div class="input-group world-search-field">
                            <input type="text" class="form-control world-search-field" name="q" value="{{ current_query }}"
                                   placeholder="{{ 'console.search_field_placeholder'|trans({}, 'global') }}" />
                            <button class="btn btn-secondary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-auto text-lg-right">
                    <a href="{{ path('console_website_petitions_categories', {'projectUuid': current_project.uuid}) }}" class="btn btn-secondary mr-2">
                        <i class="fad fa-cogs mr-1"></i>
                        Categories
                    </a>

                    <a href="{{ csrf_path('console_website_petition_create', { 'projectUuid': project.uuid }) }}" class="btn btn-primary petitions-list-action-create">
                        <i class="far fa-plus mr-1"></i>
                        Create petition
                    </a>
                </div>
            </div>
        </div>

        <div class="bg-light">
            {% if petitions|length == 0 %}
                <div class="text-center p-5">
                    <div class="my-4">
                        <h4 class="mb-4">
                            No petitions found
                        </h4>

                        <a href="{{ csrf_path('console_website_petition_create', { 'projectUuid': project.uuid }) }}" class="btn btn-lg btn-primary petitions-list-action-create">
                            <i class="far fa-plus mr-1"></i>
                            Create your first petition
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="world-list">
                    {% for petition in petitions %}
                        {% set loc = petition.localizations|first %}
                        <div class="world-list-row py-2 px-3" id="petition-{{ petition.id }}" data-id="{{ petition.id }}">
                            <div class="row align-items-center">
                                <div class="col-lg-auto d-none d-lg-block">
                                    <div class="world-list-image">
                                        <img src="{{ cdn_image_url(loc ? loc.image : null) }}" alt="{{ loc ? loc.title : petition.slug }}" />
                                    </div>
                                </div>

                                <div class="col-lg">
                                    <h5 class="mb-2 petitions-title">
                                        <a href="#" aria-disabled="true">
                                            {{ loc ? loc.title : petition.slug }}
                                        </a>
                                    </h5>

                                    <div>
                                        {% if petition.publishedAt and petition.publishedAt >= date() %}
                                            <div class="world-badge world-badge-info mr-2">
                                                Scheduled
                                            </div>
                                            <small class="text-muted">
                                                Scheduled for {{ petition.publishedAt|format_datetime('short', 'short') }}
                                            </small>

                                            <span class="mx-1">|</span>
                                        {% elseif petition.publishedAt and petition.publishedAt < date() %}
                                            <div class="world-badge world-badge-success mr-2">
                                                Published
                                            </div>
                                            <small class="text-muted">
                                                Published on {{ petition.publishedAt|format_datetime('short', 'short') }}
                                            </small>

                                            <span class="mx-1">|</span>
                                        {% else %}
                                            <div class="world-badge world-badge-warning mr-2">
                                                Draft
                                            </div>

                                            <span class="mx-1">|</span>
                                        {% endif %}

                                        <small class="text-muted">
                                            {{ petition.pageViews }} views
                                        </small>
                                    </div>
                                </div>

                                <div class="col-lg-4 text-lg-right">
                                    <a href="#" class="btn btn-sm btn-outline-primary border-0 mr-2 petitions-list-action-view" aria-disabled="true">
                                        <i class="fad fa-eye mr-1"></i>
                                        View
                                    </a>

                                    {# Edit dropdown: existing localizations + create for missing locales #}
                                    {% set existing_locales = petition.localizations|map(l => l.locale) %}
                                    {% set all_locales = ['fr','en','de','it','nl','pt'] %}
                                    {% set missing_locales = all_locales|filter(l => l not in existing_locales) %}

                                    <div class="dropdown mr-2 d-inline-block">
                                        <button type="button" class="btn btn-sm btn-outline-primary border-0 dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <i class="fad fa-edit mr-1"></i>
                                            Edit
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-right">
                                            {% for loc in petition.localizations %}
                                                <li>
                                                    <a class="dropdown-item" href="{{ path('console_website_petition_localized_edit', {
                                                        'projectUuid': project.uuid,
                                                        'uuid': loc.uuid
                                                    }) }}">
                                                        {{ loc.locale|upper }} â€” {{ loc.title ?: 'Untitled' }}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                            {% if petition.localizations|length > 0 %}
                                                <li><hr class="dropdown-divider"></li>
                                            {% endif %}
                                            {% for l in missing_locales %}
                                                <li>
                                                    <a class="dropdown-item" href="{{ csrf_path('console_website_petition_localized_create', {
                                                        'projectUuid': project.uuid,
                                                        'uuid': petition.uuid,
                                                        'locale': l
                                                    }) }}">Create {{ l|upper }}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>

                                    <a href="#" class="btn btn-sm btn-outline-danger border-0 petitions-list-action-delete" aria-disabled="true">
                                        <i class="fad fa-trash mr-1"></i>
                                        Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="p-3">
                    {{ pagination(petitions, current_page, 10) }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
