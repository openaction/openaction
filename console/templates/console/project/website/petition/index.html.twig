{% extends 'console/project/base.html.twig' %}

{% block page_title 'index.title'|trans({}, 'project_petitions') %}

{% block sidebar_petitions 'current' %}

{% from 'console/_macros/pagination.html.twig' import pagination %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.0.0/css/flag-icons.min.css"/>
{% endblock %}

{% block content %}
    <div class="world-box mb-3">
        <div class="world-box-title">
            <div class="row align-items-center">
                <div class="col-lg-8 mb-3 mb-lg-0">
                    <h3>
                        {{ 'index.title'|trans({}, 'project_petitions') }}
                    </h3>

                    <div class="text-muted">
                        {{ 'index.help'|trans({}, 'project_petitions') }}
                    </div>
                </div>
                <div class="col-lg-4 text-lg-right">
                    <a href="{{ path('console_website_petitions_categories', { 'projectUuid': project.uuid }) }}"
                       class="btn btn-secondary mr-2 petitions-list-action-categories">
                        <i class="fad fa-cogs mr-1"></i>
                        {{ 'index.edit_categories'|trans({}, 'project_petitions') }}
                    </a>

                    <a href="{{ path('console_website_petition_create', { 'projectUuid': project.uuid }) }}"
                       class="btn btn-primary petitions-list-action-create">
                        <i class="far fa-plus mr-1"></i>
                        {{ 'index.create'|trans({}, 'project_petitions') }}
                    </a>
                </div>
            </div>
        </div>

        <div class="bg-light">
            {% if petitions|length == 0 %}
                <div class="text-center p-5">
                    <div class="my-4">
                        <h4 class="mb-4">
                            {{ 'index.no_result'|trans({}, 'project_petitions') }}
                        </h4>

                        <a href="{{ path('console_website_petition_create', {'projectUuid': project.uuid}) }}"
                           class="btn btn-lg btn-primary pages-list-action-create">
                            <i class="far fa-plus mr-1"></i>
                            {{ 'index.no_result_create'|trans({}, 'project_petitions') }}
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="world-list">
                    {% for petition in petitions %}
                        <div class="world-list-row py-2" id="petition-{{ petition.id }}" data-id="{{ petition.id }}" data-uuid="{{ petition.uuid }}">
                            <div class="col-sm-12 mb-2 d-flex justify-content-between">
                                <div class="font-weight-bold">{{ petition.slug }}</div>
                                <div>
                                    <a href="{{ path('console_website_petition_localized_pre_create', {'projectUuid': project.uuid, 'petitionUuid': petition.uuid}) }}"
                                       class="btn btn-sm btn-outline-primary border-0 mr-2 petitions-list-action-edit">
                                        <i class="fad fa-file mr-1"></i>
                                        {{ 'index.localized.create'|trans({}, 'project_petitions') }}
                                    </a>
                                    <a href="{{ path('console_website_petition_edit', {'uuid': petition.uuid, 'projectUuid': project.uuid}) }}"
                                       class="btn btn-sm btn-outline-primary border-0 mr-2 petitions-list-action-edit">
                                        <i class="fad fa-edit mr-1"></i>
                                        {{ 'index.edit'|trans({}, 'project_petitions') }}
                                    </a>
                                    <a href="{{ csrf_path('console_website_petition_delete', {'uuid': petition.uuid, 'projectUuid': project.uuid}) }}"
                                       data-controller="delete"
                                       data-message="{{ 'index.remove_confirm'|trans({'%name%': petition.slug}, 'project_petitions') }}"
                                       data-target="#petition-{{ petition.id }}"
                                       class="btn btn-sm btn-outline-danger border-0 pages-list-action-delete">
                                        <i class="fad fa-trash mr-1"></i>
                                        {{ 'index.remove'|trans({}, 'project_petitions') }}
                                    </a>
                                </div>
                            </div>

                            {% for localizedPetition in petition.localized %}
                                <div class="col-sm-12 mb-2 d-flex justify-content-between">
                                    <div>
                                        <span class="fi fi-{{ localizedPetition.locale }}"></span>&nbsp;
                                        <a href="{{ path('console_website_petition_localized_edit', {'uuid': localizedPetition.uuid, 'projectUuid': project.uuid}) }}">{{ localizedPetition.title }}</a>
                                    </div>
                                    <div>
                                        <a href="{{ path('console_website_petition_localized_edit', {'uuid': localizedPetition.uuid, 'projectUuid': project.uuid}) }}"
                                           class="btn btn-sm btn-outline-primary border-0 mr-2 petitions-list-action-edit">
                                            <i class="fad fa-edit mr-1"></i>
                                            {{ 'index.metadata'|trans({}, 'project_petitions') }}
                                        </a>
                                        <a href="{{ path('console_website_forms_edit', { 'projectUuid': project.uuid, 'uuid': localizedPetition.form.uuid, 'from': 'petitions' }) }}"
                                           class="btn btn-sm btn-outline-primary border-0 mr-2 petitions-list-action-form-edit"
                                           target="_blank">
                                            <i class="fad fa-list mr-1"></i>
                                            {{ 'index.form'|trans({}, 'project_petitions') }}
                                        </a>
                                        <a href="{{ csrf_path('console_website_petition_localized_delete', {'uuid': localizedPetition.uuid, 'projectUuid': project.uuid}) }}"
                                           data-controller="delete"
                                           data-message="{{ 'index.remove_confirm'|trans({'%name%': localizedPetition.title}, 'project_petitions') }}"
                                           data-target="#localizedPetition-{{ localizedPetition.uuid }}"
                                           class="btn btn-sm btn-outline-danger border-0 pages-list-action-delete">
                                            <i class="fad fa-trash mr-1"></i>
                                            {{ 'index.remove'|trans({}, 'project_petitions') }}
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>

                <div class="p-3">
                    {{ pagination(petitions, current_page, 25) }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
