{% extends 'console/project/base.html.twig' %}

{% block page_title 'crosspost.title'|trans({'%title%': post.title}, 'project_posts') %}

{% block sidebar_posts 'current' %}

{% block content %}
    <div class="world-box mb-3">
        <div class="world-box-status">
            <a href="{{ path('console_website_posts', {'projectUuid': current_project.uuid}) }}"
               class="btn btn-outline-primary btn-sm border-0">
                <i class="fal fa-angle-left"></i>
                <span>{{ 'crosspost.back'|trans({}, 'project_posts') }}</span>
            </a>
        </div>
        <div class="p-4 p-lg-5">
            <div class="row justify-content-center py-5">
                <div class="col-12 col-md-9 col-lg-6">
                    <div class="text-muted mb-3">
                        {{ 'crosspost.help'|trans({}, 'project_posts') }}
                    </div>

                    {{ form_start(form) }}

                    {{ form_row(form.intoProjects, {'label': 'crosspost.to'|trans({}, 'project_posts')}) }}

                    <button type="submit" class="btn btn-primary">
                        {{ 'crosspost.submit'|trans({}, 'project_posts') }}
                    </button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
