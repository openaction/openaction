{% extends 'console/user/base.html.twig' %}

{% block page_title 'confirm_password.title'|trans({}, 'user') %}

{% block content %}
    <div class="world-box mb-3">
        <h3 class="world-box-title">
            {{ 'confirm_password.title'|trans({}, 'user') }}
        </h3>

        <div class="px-4 py-5 bg-light">
            <div class="row justify-content-center">
                <div class="col-12 col-md-11 col-lg-10 col-xl-8">
                    <div class="text-muted mb-4">
                        {{ 'confirm_password.desc'|trans({}, 'user') }}
                    </div>

                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    {{ form_row(form.confirmPassword, {
                        'attr': {'class': 'form-control-lg'},
                        'label': 'confirm_password.label'|trans({}, 'user')
                    }) }}

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">
                            {{ 'confirm_password.submit'|trans({}, 'user') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
