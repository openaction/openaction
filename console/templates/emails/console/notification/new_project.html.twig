{% extends 'emails/base.html.twig' %}

{% block content %}
    <h2>
        {{ 'transactional.notification.new_project.title'|trans({'%platform%': platform_name}, 'emails', locale|default('en')) }}
    </h2>

    <spacer size="16"></spacer>

    <p>
        {{ 'transactional.notification.new_project.desc'|trans({
            '%platform%': platform_name,
            '%project%': project_name,
            '%organization%': organization_name,
        }, 'emails', locale|default('en'))|raw }}
    </p>

    <p>
        {{ 'transactional.notification.new_project.error'|trans({'%platform%': platform_name}, 'emails', locale|default('en')) }}
    </p>

    <spacer size="16"></spacer>

    <p>
        {{ 'transactional.notification.footer'|trans({'%platform%': platform_name}, 'emails', locale|default('en')) }}
    </p>
{% endblock %}
