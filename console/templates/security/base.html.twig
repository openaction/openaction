{% extends 'base.html.twig' %}

{% block body_class 'full-height' %}

{% block body %}
    <div class="security">
        <div class="security-box">
            <div class="mt-5 mb-5 text-center">
                <a href="https://citipo.com/{{ app.request.locale }}">
                    <img src="{{ platform_logo }}"
                         class="security-logo" alt="{{ console_name|default(platform_name) }}" />
                </a>
            </div>

            <div class="world-box">
                {% block box '' %}
            </div>

            <div class="mt-5 pt-5 text-center">
                <small class="text-muted">
                    <a href="mailto:{{ platform_email }}"
                       class="text-muted">{{ 'contact_us'|trans({}, 'global') }}</a>
                    |
                    {{ 'now'|date('Y') }} Â© {{ platform_legal_name }}
                </small>
            </div>
        </div>
    </div>
{% endblock %}
